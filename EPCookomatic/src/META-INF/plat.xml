<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
          http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd"
                 version="2.2">
    <entity class="org.milaifontanals.cookomatic.model.cuina.Plat" access="FIELD" metadata-complete="true">
        <table name="PLAT"/>
        
        <named-query name="Plats">
            <query>select p from Plat p</query>
        </named-query>
        <named-query name="PlatsPerCategoria">
            <query>select p from Plat p where p.categoria = :categoria</query>
        </named-query>
        <named-query name="PlatsPerDisponibilitat">
            <query>select p from Plat p where p.disponible = :disponible</query>
        </named-query>

        <attributes>
            <id name="codi">
                <column name="CODI"/>
            </id>
            <basic name="nom" optional="false">
                <column name="NOM" nullable="false"/>
            </basic>
            <basic name="descripcioMD" optional="false">
                <column name="DESCRIPCIO_MD"/>
            </basic>
            <basic name="preu" optional="false">
                <column name="PREU"/>
            </basic>
            <basic name="fotoBlob">
                <lob></lob>
                <column name="FOTO" column-definition="MEDIUMBLOB"/>
            </basic>
            <basic name="disponible">
                <column name="DISPONIBLE"/>
            </basic>
            
            <many-to-one name="categoria" fetch="LAZY">
                <join-column name="CATEGORIA"/>
            </many-to-one>

            <!-- todo: one2many -->
            <element-collection name="escandall">
                <!--<order-column name="ordre" nullable="false" column-definition="numeric(2,0)"/>-->
                <!--El següent element és per redefinir el marcatge hereteat de la classe incrustada
                en cas que interessi. No sempre sera necessari -->
<!--                <attribute-override name="correu">
                    <column name="e_mail" length="320"/>
                </attribute-override>-->
                <collection-table name="linia_escandall">
                    <join-column name="PLAT"/>
                    <!--<foreign-key name="persona_correus_fk_dni"/>-->
<!--                    <unique-constraint name="persona_correus_un_dni_mail">
                        <column-name>dni</column-name>                         
                        <column-name>e_mail</column-name>
                    </unique-constraint>-->
                </collection-table>
            </element-collection>            




            <transient name="escandall"></transient>
            <transient name="foto"></transient>
        </attributes>
    </entity>

</entity-mappings>
